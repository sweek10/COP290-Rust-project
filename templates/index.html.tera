<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Spreadsheet</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }
        table {
            border-collapse: collapse;
            margin-bottom: 20px;
        }
        th, td {
            border: 1px solid #ccc;
            padding: 8px;
            text-align: center;
            min-width: 60px;
        }
        th {
            background-color: #f0f0f0;
        }
        .row-number {
            width: 50px;
            background-color: #f0f0f0;
        }
        .bold {
            font-weight: bold;
        }
        .italic {
            font-style: italic;
        }
        .underline {
            text-decoration: underline;
        }
        button {
            margin-right: 10px;
            padding: 8px 16px;
        }
        input[type="text"] {
            padding: 8px;
            width: 300px;
        }
        .status {
            margin-bottom: 10px;
        }
        .message {
            margin: 10px 0;
            padding: 10px;
            background-color: #f0f0f0;
            border: 1px solid #ccc;
            white-space: pre;
            font-family: monospace;
            max-width: 100%;
            overflow-x: auto;
            line-height: 1.2;
        }
    </style>
</head>
<body>
    <div class="status">
        Status: {% if circular_detected %}(err){% else %}(ok){% endif %}
    </div>
    {% if message %}
        <div class="message">{{ message }}</div>
    {% endif %}
    <table>
        <tr>
            <th></th>
            {% for col in columns %}
                <th>{{ col }}</th>
            {% endfor %}
        </tr>
        {% for row in rows %}
            <tr>
                <th class="row-number">{{ row.number }}</th>
                {% for cell in row.cells %}
                    <td class="{{ cell.classes }}">{{ cell.value }}</td>
                {% endfor %}
            </tr>
        {% endfor %}
    </table>
    <form action="/command" method="post">
        <input type="text" id="command-input" name="command" placeholder="Enter command (e.g., A1=5, FORMULA A1) or w/a/s/d to scroll">
        <button type="submit">Execute</button>
    </form>
    <script>
        document.getElementById('command-input').focus();
    </script>
</body>
</html>
